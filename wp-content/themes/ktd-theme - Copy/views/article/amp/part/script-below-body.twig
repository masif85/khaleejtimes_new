<!-- Chartbeat Tag Start -->
<amp-analytics type="chartbeat">
  <script type="application/json">
    {
      "vars": {
        "uid": "66153",
        "domain": "khaleejtimes.com",
        "sections": "{% if sections %}{% for items in sections|sort|reverse %}{{ items.name }}{% if loop.last == false %}, {% endif %}{% endfor %}{% else %}None{% endif %}",
        "authors": "{% if authors %}{% for author in authors %}{{ author.name }}{% if loop.last == false %}, {% endif %}{% endfor %}{% elseif author_byline %}{{ author_byline }}{% else %}None{% endif %}",
        "canonicalPath": "{{ replaced_link }}",
        "title": "{{ teaser_headline|replace({"\n":'', "\r":''})|raw }}"
      }
    }
  </script>
</amp-analytics>
<!-- Chartbeat Tag End -->

