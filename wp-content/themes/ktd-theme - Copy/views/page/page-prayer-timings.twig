}

.click {
        display: none;
    }
    .pn-ProductNav_Contents {
        float: left;
    }
    .pn-ProductNav {
        overflow-x: auto;
        overflow-y: hidden;
        -webkit-overflow-scrolling: touch;
        white-space: nowrap;
        position: relative;
    }
    .pn-ProductNav_Contents ul {
      margin-top: -10px;
    }

    .kt-nav-icon-nf {
    width: 40px;
    height: auto;
    position: absolute;
    left: 0;
    top: 51%;
    transform: translate(0,-50%);
}


}


@media (max-width: 1024px) {

.prayer-counter {
    width: 96%;
    margin-left: 5px;
}

}


@media (max-width: 991px) {


.sub-header .toggle-mobile-sub-menu {
    display: block;
}

.prayer-counter {
    width: 100%;
    margin-left: 0px;
}

.count-details p.remaining {
   top: 8px;
}

.count-details p.timer {
    bottom: 0px;
}

.newletter-widget-wrapper {
    padding: 2% 2% 1% 2%;
    max-width: 100%;
}

.count-info {
    padding: 15px 10px;
}

.prayer-timing .section-header .filter p.prayer-locations {
    margin-bottom: -6px;
}

