    position: relative;
    min-height: 300px;
    height: 300px;
    text-align: center !important;
    background: #f4f4f4;
    padding: 25px 0px 20px 0px;
    display:block;
}

.lib-prayer-timing-mpu-ad:before {
    content: "Advertisement";
    font-size: 10px;
    z-index: 99;
    color: #4c5157;
    font-family: 'proxima_novaregular';
    display: block;
    margin: 5px 0 5px;
    position: absolute;
    top: 10px;
    left: 50%;
    transform: translate(-50%, -10px);
}



}


@media (max-width: 767px){

.sub-menu li.sub-menu-item:first-child {
    padding-right: 12px;
    justify-content: flex-start;
    align-items: normal;
