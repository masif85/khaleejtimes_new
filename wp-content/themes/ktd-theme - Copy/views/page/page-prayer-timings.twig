.prayer-counter {
    margin-bottom:15px;
}

.prayer-times {
    margin-bottom: 15px;
}

.lib-prayer-timing-mpu-ad {
    position: relative;
    min-height: 276px;
    height: 276px;
    text-align: center !important;
    background: #f4f4f4;
    padding: 25px 0 0px 0;
}

.lib-prayer-timing-mpu-ad:before {
    content: "Advertisement";
    font-size: 10px;
    z-index: 99;
    color: #4c5157;
    font-family: 'proxima_novaregular';
    display: block;
    margin: 5px 0 5px;
    position: absolute;
    top: 10px;
    left: 50%;
    transform: translate(-50%, -10px);
}


}


@media (max-width: 575.98px) {
.prayer-timing .draft-rates-rt-wrap .table thead th {
    min-width: auto;
    width: auto !important;
}

.prayer-times {

    margin-bottom: 15px;
}
.single.prayer-timing {
    margin-top: 0px;
}



}


@media (max-width: 520px) {

.newletter-widget-wrapper {
    padding: 3% 2% 1% 3%;
}

.mobile-sub-menu {
   max-width: 38%;
   }

.draft-rates-rt-wrap .table tbody td {
   padding: 10px;
   vertical-align:middle;
}

.sub-menu-item h1, .prayer-timing .section-header .section-title {
    font-size: 30px;
}

.sub-menu li.sub-menu-item:not(:first-child) {
    padding: 10px 13px;
}

.section-header {
    padding-bottom: 0rem;
}

.prayer-timing .section-header p.prayer-details {
   margin-bottom: 15px;

}

.definition h4 {
    font-size: 20px;
}

.sub-menu {
    bottom: 8px;
}

.prayer-timing .section-header .filter p.prayer-locations {
    margin-bottom: -3px;
}


.draft-rates-rt-wrap .table thead th:nth-child(odd) {

    padding: 10px 20px;

    font-size: 14px;
