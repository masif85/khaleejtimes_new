    font-family: 'Montserrat', sans-serif!important;
    font-weight:bold;
}

.newletter-widget-wrapper p {
    font-family: 'Montserrat', sans-serif!important;
    font-size: 14px;
}

.newletter-widget-wrapper .subscribe-btn {
    font-family: 'Montserrat', sans-serif!important;
    padding-left: 15px;
    padding-right: 18px;
    font-size: 13px;
    font-weight: bold;
}

.newletter-widget-wrapper .form-control.email-field {
    font-size: 12px;
    font-family: 'Montserrat', sans-serif!important;
}

.count-info p , .count-details p.timer .number , .count-details p.remaining , .count-details p.timer .hour:before , .count-details p.timer .minute:before , .count-details p.timer .second:before   {
    font-family: 'Montserrat', sans-serif!important;
}

.count-info {
    padding: 15px 10px;
}

.filter .sub-menu .sub-menu-item a {
