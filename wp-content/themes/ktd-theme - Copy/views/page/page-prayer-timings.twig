    position: sticky !important;
    width: auto;
    top: 0;
    left: -1px;
    text-align:center;
}

.prayer-times {

    margin-bottom: 0px;
    padding: 10px 7px !important;
}

.sub-header .toggle-mobile-sub-menu {
    display: none;
}



@media (max-width: 1399px) {

.newletter-widget-wrapper {
    background: #222;
    padding: 5% 4%;
}

.newletter-widget-wrapper p {
    margin-top: 10px;
    margin-bottom: 10px;
    line-height: 21px;
}

.prayer-timing .section-header .filter p.prayer-locations {
    margin-bottom: -10px;
}


}


@media (min-width: 1400px) {


ul#prayer-other-locations.mobile-sub-menu {
    background: none;
}

ul#prayer-other-locations.mobile-sub-menu.shadow-sm{
box-shadow:none !Important;

}

.toggle-mobile-sub-menu {
    display: none;
    right: -30px;
}

ul#prayer-other-locations.sub-menu {
    overflow: hidden;
    padding-right: 30px;
    font-size: 14px;
}


ul#prayer-other-locations.mobile-sub-menu {
    display: inline-flex;
    width: 100%;
    max-width: 40%;
    margin: 0;
    padding: 0;
    position: absolute;
    right: -7px;
    top: 27px;
    z-index: 99;
    background: none;
    font-size: 14px;
}



ul#prayer-other-locations.mobile-sub-menu li {
    display: inline;
    padding: 6px 10px;
}

.prayer-timing .section-header .filter ul.sub-menu li.sub-menu-item:first-child, .prayer-timing .section-header .filter ul.sub-menu li.sub-menu-item {
    align-items: center;
}

.prayer-timing .section-header .filter ul li a {
    font-weight: bold;
    font-size: 15px;
}



}



@media (max-width: 1139px) and (min-width: 1024px) {
.newletter-widget-wrapper h3 {
    font-size: 18px !important;
}

}

@media (max-width: 1024px) {

