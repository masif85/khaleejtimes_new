    <div class="row">

      <div class="footer-left-column">

        {% if footernav %}
          {% for item in footernav|slice(0,8) %}
            <div class="footer-lft-column">
              <amp-accordion id="{{ item.ID }}" disable-session-states>
                <section>
                  <h3 class="footer-title">
                    <a href="{{ item.url }}">{{ item.title|raw }}</a>
                    <i class="fas fa-chevron-down footer-down-arrow hidden visible-xs"
                       data-toggle="collapse"
                       data-target="#collapse{{ item.ID }}"
                       aria-expanded="false"
                       aria-controls="collapse{{ item.ID }}">
                    </i>
                  </h3>
                  {% if item.children.isNotEmpty %}
                    <ul class="footer-links collapse dont-collapse-sm" id="collapse{{ item.ID }}">
                      {% for subitem in item.children %}
                        <li><a href="{{ subitem.url }}">{{ subitem.title|raw }}</a></li>
                      {% endfor %}
                    </ul>
                  {% endif %}
                </section>
              </amp-accordion>
            </div>
          {% endfor %}
        {% endif %}

