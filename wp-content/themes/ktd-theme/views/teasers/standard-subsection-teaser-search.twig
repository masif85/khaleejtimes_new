{% apply spaceless %}
<!-- standard subsection teaser -->
  <article class="top-list-thumb-stories tabs {% if contentsubtype == 'VIDEO' %}VIDEO{% elseif contentsubtype == 'GALLERY' %}GALLERY{% else %}ARTICLE{% endif %}" data-parent="{% if contentsubtype == 'VIDEO' %}VIDEO{% elseif contentsubtype == 'GALLERY' %}GALLERY{% else %}ARTICLE{% endif %}" data-uuid="{{ uuid }}" data-worth="{{indexs}}">
  <div class="post-title-rows">
    {% if image %}      
      <div class="thumb-with-image image-zoom">
        <a href="{{ permalink }}">
          {{ render_partial('@base/teasers/partial/image-authors', image|merge({ 'alttext': headline|striptags|replace({'"':'\''}) })) }}
        </a>
      </div>
       
    {% endif %}
    <div class="heading">      
        {% include '@base/teasers/partial/headline-search.twig' %}      
        {% include '@base/teasers/partial/leadin-search.twig' %}      
    </div>
    </div>
  </article>
{% endapply %}