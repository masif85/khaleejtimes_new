              </script>
            </div> -->
            <!-- Tag ID: khaleejtimes_Responsive-Section-Leaderboard-1 -->
            <div align="center" data-freestar-ad="__320x100 __970x250" id="khaleejtimes_Responsive-Section-Leaderboard-1">
              <script data-cfasync="false" type="text/javascript">
                freestar.config.enabled_slots.push({ placementName: "khaleejtimes_Responsive-Section-Leaderboard-1", slotId: "khaleejtimes_Responsive-Section-Leaderboard-1" });
              </script>
            </div>
          </div>
        </div>
      </div>
    </div>

  </main>
{% endblock %}

{% block page_stylesheets_scripts_bottom %}
  {{ parent() }}
