{% extends '@base/main.twig' %}

{% block page_content %}

<div class="container">
  <div class="row">
    <div class="container">
      <section class="kt-section-top">
        <div class="row">
          <div class="col-lg-8 col-md-12 col-12 listing-blog-left-side-content">
            <section class="kt-section-title">
              <div class="breadcrumbs">
                <ul class="breadcrumbs">
                  <li><a href="#">Home</a></li>
                  <li>/</li>
                  <li><a href="/{% if currentPage.post_parent %}{{ parentPostName }}{% else %}{{ currentPage.post_title }}{% endif %}">{% if currentPage.post_parent %}{{ parentPostName }}{% else %}{{ currentPage.post_title }}{% endif %}</a></li>
                  <li>/</li>
                  <li><a href="#"> {% if currentPage.post_parent %}{{ currentPage.post_title }}{%endif%}</a></li>
                </ul>
                <h1><a href="#">{% if currentPage.post_title=='Emergencies'%}
                    News on Emergencies
                {%else%}
                {{ currentPage.post_title }} News {%endif%}</a></h1>
              </div>
            </section>
            <div class="listing-blog-teaser-outer">
              {% if articles is not empty %}
                {% for article in articles %}
                  {% if loop.first %}
                    <!-- First Article -->
                    {{ render_partial('@base/teasers/standard-teaser-listing.twig', article) }}
                  {% else %}
                    {% if loop.index == 2 %}
                      {# <div class="row">
                        <div class="listing-blog-mpu"> <img src="images/mpu.jpg" alt=""> </div>
                      </div> #}

                      <div class="mpu-ad-unit ad-unit listing-blog-mpu">
                        <!-- /78059622/Responsive-Section-Leaderboard-2 -->
                        <!-- <div id='div-gpt-ad-1613547811534-0'>
                          <script>
                              googletag.cmd.push(function() { googletag.display('div-gpt-ad-1613547811534-0'); });
                          </script>
                        </div> -->
                        <!-- Tag ID: khaleejtimes_Responsive-Section-Leaderboard-2 -->
                        <div align="center" data-freestar-ad="__320x100 __728x90" id="khaleejtimes_Responsive-Section-Leaderboard-2">
                          <script data-cfasync="false" type="text/javascript">
                            freestar.config.enabled_slots.push({ placementName: "khaleejtimes_Responsive-Section-Leaderboard-2", slotId: "khaleejtimes_Responsive-Section-Leaderboard-2" });
                          </script>
                        </div>
                      </div>

                    {% endif %}
                      {{ render_partial('@base/teasers/standard-subsection-teaser-listing.twig', article| merge({'pagetype': 'conceptz' })) }}
                  {% endif %}
                {% endfor %}
              {% endif %}  
              <div class="button-wrap"> <a id="load-more" class="load-more-button-listing" style="display: none;">Load More <i class="fas fa-angle-down"></i></a> </div>
            </div>
          </div>
          <div class="col-12 col-lg-4 col-md-12 listing-blog-sidebar">
            <div class="article-right-sidebar">
              <!-- Right side -->
                {# render_sidebar("subsection-sidebar") #}
                {{ render_sidebar("listing-page-sidebar") }}
            </div>
          </div>
        </div>
      </section>
    </div>
  </div>
</div>

{% endblock %}
