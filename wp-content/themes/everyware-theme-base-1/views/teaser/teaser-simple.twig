<article class="teaser frontpage-teaser-simple col-3 no-gutters">

            <a href="{{ permalink }}">
                    {% if image %}
                        <div class="teaser-image frontpage-teaser-simple col-md-12">
                            {{ render_partial('@base/teaser/partial/image', image) }}
                        </div>
                    {% elseif image_uuid %}
                    <div class="teaser-image frontpage-teaser-simple col-md-12">
                        <img src="{{ image_endpoint_url }}/?uuid={{ image_uuid }}&function=hardcrop&type=preview&source=false&width=600&height=450">
                    </div>
                {% endif %}
            </a>

            <div class="teaser-content col-md-12">				
                <a href="{{ permalink }}"><div class="entry-title frontpage-teaser-simple">{% block headline %}{% include "@base/teaser/partial/headline.twig" %}{% endblock %}</div></a>
            </div>

</article>