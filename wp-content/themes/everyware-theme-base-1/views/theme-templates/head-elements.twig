	<meta charset="{{ charset }}">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<meta name="mobile-web-app-capable" content="yes">
	<meta name="apple-mobile-web-app-capable" content="yes">
	<meta name="apple-mobile-web-app-title" content="{{ name }} - {{ description }}">
	<link rel="profile" href="http://gmpg.org/xfn/11">
	<link rel="pingback" href="{{ pingback_url }}">
	<link rel="stylesheet" href="{{ custom_font_family_url }}">

	{% if favicon %}
		<link rel="shortcut icon" href="{{ favicon }}" />
	{% else %}
		<link rel="shortcut icon" href="{{ stylesheet_uri }}/images/default_favicon.png" />
	{% endif %}