<header class="primary-header">
  <div class="sticky-header-wrap sticky-div">
    <div class="container">
      <div class="header-row justify-content-lg-between">

        <!-- Logo -->
        <div id="logo" class="mx-lg-auto col-auto col-md-6 flex-column order-lg-2 px-0">
          <a href="/" class="standard-logo">
            <amp-img alt="Khaleej Times"
                     src="{{ get_stylesheet_directory_uri() }}/assets/images/khaleej-times-logo.svg"
                     width="220"
                     height="39"
                     layout="fixed"
            ></amp-img>
          </a>
        </div>
        <!-- END Logo -->

        <div class="header-misc col-auto col-lg-3 col-md-3 order-lg-3 justify-content-lg-end justify-content-md-end flex-md-column ml-0 px-0">
          <div class="row no-gutters">
            <div class="col-12">

              <div class="header-right-column">

                <a href="#" class="sign-up-btn btn btn-primary btn-3 btn-blue border-none text-1 rounded-4 mr-1 mr-lg-2 font-size-14px pl-3 pr-3">
                  Sign In/Up
                </a>

                <ul class="header-right-icons">

                  <li class="header-search">
                    <a on="tap:amp-search" class="amp-search-toggle" role="button" tabindex="2">
                      <i class="fa fa-search" aria-hidden="true"></i>
                    </a>
                  </li>

                  <li class="header-menu-icon pr-0">
                    <div class="hamburger_menu_nf">
                      <a on="tap:amp-menu" class="amp-menu-toggle" role="button" tabindex="1">
                        <i class="fas fa-bars"></i>
                      </a>
                    </div>
                  </li>

                </ul>

              </div>

            </div>
          </div>
        </div>

      </div>
    </div>
  </div>

  <amp-lightbox scrollable id="amp-menu" class="lightbox-menu" layout="nodisplay">
    <div class="lightbox menu-overlay block">
      <div class="centered">

        <span on="tap:amp-menu.close" class="amp-menu-close" role="button" tabindex="1">
          <i class="fa fa-times" aria-hidden="true"></i>
        </span>

        <div class="menu-box">

          <!-- Mega Nav Start -->
          <div class="nav-overlay-nf">
            <div class="container">
              <div class="row">
                <div class="col-lg-7 mega-nav-column-line">

                  <amp-accordion id="news" disable-session-states>

                    {% for item in meganav %}
                      <section>
                        <h3 class="mega-nav-left-columns-heading">
                          <a href="{{ item.url }}">{{ item.title|raw }}</a>
                          <i class="fas fa-chevron-down mega-nav-down-arrow hidden visible-xs"
                             data-toggle="collapse"
                             data-target="#collapse-mega-nav{{ item.ID }}"
                             aria-expanded="false"
                             aria-controls="collapse-mega-nav{{ item.ID }}"
                          ></i>
                        </h3>
                        {% if item.children.isNotEmpty %}
                          <ul class="mega-nav-left-columns">
                            {% for subitem in item.children %}
                              <li><a href="{{ subitem.url }}">{{ subitem.title|raw }}</a></li>
                            {% endfor %}
                          </ul>
                        {% endif %}
                      </section>
                    {% endfor %}

                  </amp-accordion>

                </div>

                <div class="col-lg-5 mega-nav-right-columns-wrap-pdng">

                  {% include "@base/page/nav/mega-nav-right-side-links.twig" %}

                  <div class="meganav-app-wrap">
                    <h3 class="mega-nav-left-columns-heading">KT APPDOWNLOAD</h3>
                    <ul class="meganav-app-lists">
                      <li>
                        <a href="https://itunes.apple.com/ae/app/khaleej-times/id909275381?mt=8">
                          <amp-img alt="apple" src="{{ get_stylesheet_directory_uri() }}/assets/images/apple.svg" width="19" height="24" layout="fixed"></amp-img>
                          iPhone | iPad
                        </a>
                      </li>
                      <li>
                        <a href="https://play.google.com/store/apps/details?id=com.khaleejtimes&hl=en">
                          <amp-img alt="android" src="{{ get_stylesheet_directory_uri() }}/assets/images/android.svg" width="19" height="24" layout="fixed"></amp-img>
                          Android
                        </a>
                      </li>
                      <li>
                        <a href="https://appgallery5.huawei.com/#/app/C101150783">
                          <amp-img alt="huawei" src="{{ get_stylesheet_directory_uri() }}/assets/images/huawei.svg" width="19" height="24" layout="fixed"></amp-img>
                          Huawei
                        </a>
                      </li>
                    </ul>
                  </div>
                </div>

              </div>
            </div>
          </div>
          <!-- Mega Nav Ends -->

        </div>
      </div>
    </div>
  </amp-lightbox>

  <!-- Search -->
  <amp-lightbox id="amp-search" class="lightbox-menu" layout="nodisplay">
    <div class="lightbox search-overlay block">
      <div class="centered">

        <span on="tap:amp-search.close" class="amp-search-close" role="button" tabindex="1">
          <i class="fa fa-times" aria-hidden="true"></i>
        </span>

        <div class="search-box search-wrapper-nf">
          <div class="d-flex flex-column h-100 justify-content-center align-items-center">
            <div class="search-wrap-inner">
              <h2>Type your keywords</h2>
              <form name="searchform" id="searchform" action="/search" target="_top">
                <input type="text" id="search" class="search-field-nf" placeholder="Enter keywords here.." name="q">
                <button type="submit" class="search-btn">Search</button>
              </form>
            </div>
          </div>
        </div>

      </div>
    </div>
  </amp-lightbox>
  <!-- END Search -->

  <!-- Top Menu -->
  {% include "@base/page/nav/top-menu.twig" %}
  <!-- END Top Menu -->

</header>
