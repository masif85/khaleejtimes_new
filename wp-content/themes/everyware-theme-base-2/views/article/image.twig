<figure class="ew-image figure figure--image" data-uuid="{{ uuid }}" data-width="{{ width }}"
        data-height="{{ height }}">
    <div class="opener">
        <div class="opener-toolbar">
            <span class="fa fa-expand opener-button opener-button-open"></span>
            <span class="fa fa-times hidden opener-button opener-button-close"></span>
        </div>
        <div class="opener-image">
            <img class="figure-img img-fluid" srcset="{{ srcset }}" src="{{ src }}" alt="{{ alttext }}"
                 itemprop="image"/>
            <figcaption class="figure-caption">
                <span class="caption-prefix-placeholder"></span>
                {% if text %}
                    {{ text|raw }}
                {% else %}
                    <span class="caption-fallback-placeholder"></span>
                {% endif %}
                {% if authors %}
                    {{ __('Photo by', 'ew-base-theme-2') }}
                    {{ authors|column('title')|join(', ') }}
                {% endif %}
            </figcaption>
        </div>
    </div>
</figure>
