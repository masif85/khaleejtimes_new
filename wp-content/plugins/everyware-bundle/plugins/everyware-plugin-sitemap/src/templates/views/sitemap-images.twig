{% apply spaceless %}
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9" xmlns:image="http://www.google.com/schemas/sitemap-image/1.1">
  <url>
    <loc>{{ domain }}</loc>
    {% for image in images %}
      <image:image>
        <image:loc>{{ image_domain ~ '/?uuid=' ~ image.uuid ~ '&function=original&type=preview' }}</image:loc>
      </image:image>
    {% endfor %}
  </url>
</urlset>
{% endapply %}
