<form action="" class="form" method="post">
    <div class="panel panel-default">
        <div class="panel-heading">Website tracking settings</div>
        <div class="panel-body">
            <div class="form-group">
                <label for="{{ measurement_id.id() }}">Measurement ID</label>
                {{ form.input('text', measurement_id, { class: 'form-control', placeholder: 'G-XXXXXXXXXX', pattern: 'G-[a-zA-Z0-9-]+', title: 'G-XXXXXXXX'})|raw }}
            </div>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">Most read widget - common settings</div>
        <div class="panel-body">
            <div class="form-group">
                <label for="{{ property_id.id() }}">Property ID default fallback</label>
                {{ form.input('text', property_id, { class: 'form-control' })|raw }}
            </div>

            <div class="form-inline">
                <label>Date range</label>
                <div class="form-group">
                <label for="{{ time_start.id() }}">Start</label>
                {{ form.input('text', time_start, { class: 'form-control', pattern: '[0-9]{4}-[0-9]{2}-[0-9]{2}|today|yesterday|[0-9]+(daysAgo)', title: 'YYYY-MM-DD, today, yesterday or {n}daysAgo' })|raw }}
                <label for="{{ time_stop.id() }}">End</label>
                {{ form.input('text', time_stop, { class: 'form-control', pattern: '[0-9]{4}-[0-9]{2}-[0-9]{2}|today|yesterday|[0-9]+(daysAgo)', title: 'YYYY-MM-DD, today, yesterday or {n}daysAgo' })|raw }}
                </div>
            </div>

            <div class="form-group">
                <button class="test_ga_query__btn btn btn-primary btn-sm"><i class="fa fa-refresh"></i> Test GA query</button>
            </div>
            <div class="form-group ga_query__results" style="display:none;"></div>
        </div>
    </div>
    <div class="form-group pull-right">
        {{ form.input('hidden', credentials )|raw }}
        {{ form.input('hidden', current_version )|raw }}
        <button class="btn btn-primary" type="submit">Save</button>
    </div>
</form>
