{% extends '@projectPlugin/components/admin.twig' %}

{% block form_header %}{% endblock %}
{% block form %}
  <div class="oc-query-box">
    <div class="form-group">
      <label for="{{ title.id() }}">Title {{ form.tooltip(translate('This is the headline for the list.', textdomain))|raw }}</label>
      {{ form.input('text', title, { class: 'form-control' })|raw }}
    </div>

    <div class="form-group">
      <label>OC list {{ form.tooltip(translate('Select OC list', textdomain))|raw }}</label>
      {{ form.select(list, lists, { class: 'form-control', placeholder: 'Select List' })|raw }}
    </div>

    <div class="form-group">
      <label>List template {{ form.tooltip(translate('Select list template', textdomain))|raw }}</label>
      {{ form.select(template, templates, { class: 'form-control', placeholder: 'Select Template. <i>Default: <b>video</b></i>' })|raw }}
    </div>
  </div>
{% endblock %}
